{
  "name": "@phughesmcr/anglicana",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "license": "MIT",
  "publish": {
    "include": [
      "dist/**/*",
      "LICENSE",
      "README.md"
    ],
    "exclude": [
      "test/**/*",
      "scripts/**/*",
      "docs/**/*",
      "scratch/**/*",
      ".github/**/*",
      ".vscode/**/*",
      "coverage/**/*"
    ]
  },
  "include": [
    "mod.ts",
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "exclude": [
    ".github",
    ".vscode",
    "dist",
    "docs",
    "coverage",
    "scratch",
    "scripts"
  ],
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "test": {
    "include": [
      "test/**/*.ts"
    ]
  },
  "fmt": {
    "lineWidth": 120
  },
  "unstable": [
    "temporal"
  ],
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.6"
  },
  "tasks": {
    "build": "deno task check && deno run -A scripts/build.ts",
    "check": "deno fmt --check && deno lint && deno doc --lint src/**/*.ts",
    "contribute": "deno task hooks:install",
    "doc": "deno task check && deno doc --html --name=\"Anglicana\" --output=./docs/index.html mod.ts",
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": "deno task check && dent fmt && deno task test",
    "test": "deno test --clean --parallel --hide-stacktraces"
  },
  "compilerOptions": {
    "strict": true,
    "checkJs": true,
    "lib": [
      "es2022",
      "deno.window",
      "deno.unstable"
    ]
  }
}
